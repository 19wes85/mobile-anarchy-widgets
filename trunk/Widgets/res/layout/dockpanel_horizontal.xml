<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
 	xmlns:ma="http://com.MobileAnarchy.Android.Widgets"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#333">

	<LinearLayout android:id="@+id/LinearLayout" android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical" android:gravity="center">
			<!-- Activity Content -->
	</LinearLayout>

	<com.MobileAnarchy.Android.Widgets.DockPanel.DockPanel
		android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="top"
	    ma:dockPosition="top"
	    ma:handleButtonDrawableResourceId="@drawable/top_dock_handle"
	    ma:contentLayoutId="@layout/dockpanel_horizontal_content"
	    ma:animationDuration="1000" /> 
	
	<com.MobileAnarchy.Android.Widgets.DockPanel.DockPanel
		android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="bottom"
	    ma:dockPosition="bottom"
	    ma:contentLayoutId="@layout/dockpanel_horizontal_content"
	    ma:handleButtonDrawableResourceId="@drawable/bottom_dock_handle" /> 
</FrameLayout>
